---
interface Props {
  tags: string[]
}

const { tags } = Astro.props
---

<div>
  <ul>
    {
      tags.map((tag) => (
        <li>
          <span class="sl-obs-tag">{tag}</span>
        </li>
      ))
    }
  </ul>
</div>

<style>
  ul {
    display: inline;
    padding: 0;
  }

  li {
    display: inline-block;
  }

  li .sl-obs-tag {
    margin-inline-end: 0.375rem;
    margin-bottom: 0.25rem;
    overflow-wrap: anywhere;
  }
</style>
